<Window x:Class="WpfSampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSampleApp"
        xmlns:vm="clr-namespace:WpfSampleApp.ViewModel.Main;assembly=WpfSampleApp.ViewModel" 
        xmlns:view="clr-namespace:WpfSampleApp.View"
        mc:Ignorable="d">
    <Window.DataContext>
        <ObjectDataProvider ObjectType="vm:MainWindowVM" />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="10"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <view:MenuUserControl Grid.Column="0"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
        <TextBlock Text="サンプル表示" Grid.Column="2" />
    </Grid>
</Window>
